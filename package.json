{
  "name": "base-nest-api",
  "version": "0.0.3",
  "description": "This is a base project for NestJS API",
  "author": {
    "email": "gabrielmaialva33@gmail.com",
    "name": "Gabriel Maia",
    "url": "https://github.com/gabrielmaialva33"
  },
  "homepage": "https://github.com/gabrielmaialva33/base-nest-api#readme",
  "repository": "https://github.com/gabrielmaialva33/base-nest-api.git",
  "keywords": [
    "api",
    "postgres",
    "sqlite",
    "postgresql",
    "openapi",
    "objection-orm",
    "api-rest",
    "objectionjs",
    "nestjs",
    "better-sqlite3",
    "nestjs-backend",
    "zod"
  ],
  "engines": {
    "node": ">=22.13.1"
  },
  "private": true,
  "license": "LICENSE",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:status": "ts-node -r tsconfig-paths/register ./node_modules/knex/bin/cli.js --knexfile ./knexfile.ts migrate:status",
    "db:migrate": "ts-node -r tsconfig-paths/register ./node_modules/knex/bin/cli.js --knexfile ./knexfile.ts migrate:latest",
    "db:rollback": "ts-node -r tsconfig-paths/register ./node_modules/knex/bin/cli.js --knexfile ./knexfile.ts migrate:rollback",
    "db:make": "ts-node -r tsconfig-paths/register ./node_modules/knex/bin/cli.js --knexfile ./knexfile.ts migrate:make $1 -x ts",
    "db:reset": "ts-node -r tsconfig-paths/register ./node_modules/knex/bin/cli.js --knexfile ./knexfile.ts migrate:rollback && ts-node -r tsconfig-paths/register ./node_modules/knex/bin/cli.js --knexfile ./knexfile.ts migrate:latest",
    "db:seed": "ts-node -r tsconfig-paths/register ./node_modules/knex/bin/cli.js --knexfile ./knexfile.ts seed:run",
    "db:prune:sqlite": "rimraf ./src/database/database.sqlite"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.740.0",
    "@aws-sdk/client-ses": "^3.738.0",
    "@blazity/nest-file-fastify": "^1.0.0",
    "@fastify/compress": "^8.0.1",
    "@fastify/cors": "10.0.2",
    "@fastify/formbody": "8.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/middie": "9.0.3",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.0.4",
    "@ladjs/consolidate": "^1.0.4",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/cache-manager": "^3.0.0",
    "@nestjs/common": "^11.0.7",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.7",
    "@nestjs/event-emitter": "^3.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.7",
    "@nestjs/platform-fastify": "^11.0.7",
    "@nestjs/schedule": "^5.0.1",
    "@supercharge/request-ip": "^1.2.0",
    "argon2": "^0.41.1",
    "axios": "^1.7.9",
    "better-sqlite3": "^11.8.1",
    "cache-manager": "^6.4.0",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "fast-glob": "^3.3.3",
    "fastify": "5.2.1",
    "firebase-admin": "^13.0.2",
    "helper-fns": "^2.9.2",
    "knex": "^3.1.0",
    "luxon": "^3.5.0",
    "mime-types": "^2.1.35",
    "ms": "^2.1.3",
    "nestjs-i18n": "^10.5.0",
    "nodemailer": "^6.10.0",
    "objection": "^3.1.5",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "preview-email": "^3.1.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "twilio": "5.4.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.4.0",
    "@golevelup/ts-jest": "^0.6.2",
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.7",
    "@types/cache-manager": "^4.0.6",
    "@types/cache-manager-redis-store": "^2.0.4",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.4.2",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.13.0",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/preview-email": "^3.1.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/$1"
    }
  }
}
